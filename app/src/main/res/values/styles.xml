    <!--
        Стиль поля ввода, содержимое которого нельзя редактировать напрямую

        Обрати внимание, на то, что цвет текста остаётся primary: часто текст напрямую вводить нельзя, но значение можно
        изменить, нажав на иконку (например, выбрать дату), либо на само поле (выбор улицы).
        Primary цвет текста указывает на то, что значение изменить можно.

        Если нужно показать текст без возможности изменения отображаемого значения вообще, используй
        TextInputEditText.ReadOnly.Secondary - в нём текст имеет цвет secondary.
    -->
    <style name="TextInputEditText.ReadOnly">
        <item name="android:editable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:cursorVisible">false</item>
    </style>

    <style name="TextInputEditText.ReadOnly.Secondary">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextInputEditText.ReadOnly.SingleLine">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextInputEditText.ReadOnly.SingleLine.Secondary">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextInputEditText.Icon" />

    <style name="TextInputEditText.Spinner">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:editable">false</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextInputEditText.Decimal">
        <item name="android:minWidth">50dp</item>
        <item name="android:hint">0</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">3</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:digits">0123456789</item>
        <item name="android:paddingLeft">@dimen/micro</item>
        <item name="android:paddingRight">@dimen/micro</item>
        <item name="android:textColorHint">@color/text_secondary</item>
    </style>

    <style name="TextInputEditText.Decimal.Inn">
        <item name="android:hint">000000000000</item>
        <item name="android:maxLength">12</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="TextInputEditText.Decimal.Counter">
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:maxLength">5</item>
        <item name="android:singleLine">true</item>
        <item name="android:digits">0123456789.,</item>
    </style>

    <style name="TextInputEditText.Decimal.Dimens">
        <item name="android:layout_width">60dp</item>
        <item name="android:hint">0</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:singleLine">true</item>
    </style>


